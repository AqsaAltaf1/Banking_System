<div class='container log'>
  <h2 class='text-center'>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'your email', class: "form-control"%>
    </div>

    <div class="field mt-3">
      <%= f.password_field :password, autocomplete: "current-password",placeholder: 'your password', class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "Log in",class: 'btn btn1' %>
    </div>
  <% end %>
</div>
