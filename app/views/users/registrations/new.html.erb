<div class='container'>
  <h2 class='text-center'>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class='row mt-2'>
      <div class="field col">
        <%= f.text_field :first_name, autofocus: true,placeholder: 'first name', autocomplete: "first name", class: "form-control" %><br />
      </div>
      <div class="field col">
        <%= f.text_field :last_name, autofocus: true,placeholder: 'last name', autocomplete: "last name", class: "form-control" %><br />
      </div>
    </div>
    
    <div class='row'>
      <div class="field col">
        <%= f.number_field :phone_number, autofocus: true,placeholder: 'phone_number', autocomplete: "phone number", class: "form-control" %><br />
      </div>
      <div class="field col">
        <%= f.number_field :cnic, autofocus: true,placeholder: 'CNIC', autocomplete: "cnic", class: "form-control" %><br />
      </div>
    </div>

    <div class="field">
      <%= f.text_field :address, autofocus: true,placeholder: 'address', autocomplete: "address", class: "form-control" %><br />
    </div>
   
    <div class="field">
      <%= f.email_field :email, autofocus: true,placeholder: 'Email', autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mt-3">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",placeholder: 'password', class: "form-control" %>
    </div>

    <div class="field mt-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: 'password confirmation', class: "form-control" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "Sign up", class: "btn btn1" %>
    </div>
  <% end %>
</div>
